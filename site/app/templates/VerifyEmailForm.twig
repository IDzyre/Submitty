<div class="content shadow" id="login-box">
    <div id="login-guest">
     <!-- Add correct URL eventually -->
        <h1> Verify your Email <a target=_blank href="https://submitty.org">
        <i style="font-style:normal;" class="fa-question-circle"></i>
        </a> </h1>
    </div>

    {% if use_code %}
        <form method="GET" id="verify-email" action="{{ verify_email_url }}" >
            Enter Verification Code
            <input type="text" name="verification_code" required />
            <input type="hidden" name="user_id" value="{{ user_id }}" />
            <input type="submit" name="submit" value="Submit" class="btn btn-primary" />
        </form>
        <br/>
        <form id="resend-email">
            Resend Verification Code 
            <input type="hidden" name="user_id" value="{{ user_id }}" />
            <input type="submit" name="submit" value="Resend" class="btn btn-primary" />
        </form>
    {% else %}
        CLICK LINK
    {% endif %}

</div>

